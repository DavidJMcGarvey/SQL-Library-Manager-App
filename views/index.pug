extends layout

block content

  h1 Books on Books on Books!
  
  div
    input(placeholder="Search books...")
    a.button.search Search
    a.button(href='/books/new') Create New Book
      
  p

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
    each book in books
      tr
        td
          a(href='books/' + book.id)= book.title
        td= book.author
        td= book.genre
        td= book.year

  include _paginate